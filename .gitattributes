# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cpp text eol=lf
*.c text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.cc text eol=lf
*.cxx text eol=lf
*.hxx text eol=lf

# CMake files
CMakeLists.txt text eol=lf
*.cmake text eol=lf

# Makefiles
Makefile text eol=lf
*.mk text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch files (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.a binary
*.lib binary
*.o binary
*.obj binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
.gitkeep text eol=lf

# License and legal
LICENSE* text eol=lf
COPYING* text eol=lf
COPYRIGHT* text eol=lf

# Export ignore (files not included in git archive)
.gitignore export-ignore
.gitattributes export-ignore
.github/ export-ignore
docs/_build/ export-ignore